{
  "name": "dobux",
  "version": "1.4.2-beta.0",
  "description": "Lightweight responsive state management solution",
  "files": [
    "cjs",
    "esm",
    "umd",
    "lib",
    "index.js"
  ],
  "main": "index.js",
  "commonjs": "cjs/dobux.js",
  "module": "esm/dobux.js",
  "browser": "umd/dobux.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && rollup -c && tsc --module esnext",
    "clean": "rimraf lib cjs esm umd",
    "watch": "concurrently npm:watch:*",
    "watch:rollup": "cross-env BUILD_ENV=umd rollup -c -w",
    "watch:ts": "tsc --watch",
    "docs:dev": "dumi dev docs",
    "docs:build": "dumi build docs",
    "lint": "eslint 'src/**/*.@(js|ts)' --fix && npm-ensure -t deps",
    "prettier": "prettier --write 'src/**/*.@(js|ts)'",
    "test": "npm run test:once -- --watch",
    "test:once": "jest --runInBand --forceExit --colors --coverage",
    "coverage": "codecov",
    "prerelease": "npm run lint && npm run test:once && npm run build",
    "release": "release --repo-type=github",
    "release:quick": "release --repo-type=github"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kcfe/dobux"
  },
  "keywords": [
    "dobux",
    "react",
    "hooks",
    "typescript",
    "state-management",
    "immutable"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix",
      "npm-ensure -t deps",
      "git add"
    ]
  },
  "ensure": {
    "deps": {
      "checkDirs": [
        "src/**/*"
      ]
    }
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.2",
    "immer": "^6.0.9"
  },
  "peerDependencies": {
    "react": "^16.8.3 || ^17"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@eljs/release": "^0.2.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^7.2.1",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.8",
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "codecov": "^3.8.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "dumi": "^1.1.23",
    "eslint": "^7.3.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "npm-ensure": "^1.2.0",
    "prettier": "^2.1.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.20.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "uglify-es": "^3.3.10"
  },
  "author": "chnliquan",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT"
}
